<%= form_with(url: user_messages_path(user_id: user.id), 
            method: :post, 
            class: 'm-t-sm',
            data: { controller: 'clear-form',
                    action: 'turbo:submit-end->clear-form#clear' }) do |form| %>
<div class="input-group">
    <%= form.text_field :text, placeholder: 'Say Something', class: 'form-control input-sm rounded' %>
    <%= form.hidden_field :room_id, value: room.id %>
    <%= form.hidden_field :user_id, value: user.id %>
    <span class="input-group-btn">
    <%= form.submit 'Send', class: 'btn btn-sm btn-dark font-bold btn-rounded' %>
    </span>  
</div>
<% end %>